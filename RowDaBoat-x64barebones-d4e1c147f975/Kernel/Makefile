include Makefile.inc

KERNEL=kernel.bin
KERNEL_GDB =kernel.elf
SOURCES=$(wildcard *.c)
SOURCES_INT=$(wildcard Interrupciones/*.c)
SOURCES_ASM=$(wildcard asm/*.asm)
SOURCES_ASM_INT=$(wildcard Interrupciones/*.asm)
SOURCES_VIDEO=$(wildcard Video_Driver/*.c)
SOURCES_KEYBOARD=$(wildcard Keyboard_Driver/*.c)
SOURCES_ASM_KEYBOARD=$(wildcard Keyboard_Driver/*.asm)
SOURCES_MM =$(wildcard Memory_Manager/*.c)
SOURCES_scheduler=$(wildcard Scheduler/*.c)
SOURCES_ARRAYS=$(wildcard Arrays/*.c)
SOURCES_FILES_DESCRIPTORS=$(wildcard Files_Descriptors/*.c)
SOURCES_PROCESSES=$(wildcard Processes/*.c)
SOURCES_IPC=$(wildcard IPCs/*.c)
SOURCES_LIBS=$(wildcard Libs/*.c)
OBJECTS=$(SOURCES:.c=.o)
OBJECTS_ASM=$(SOURCES_ASM:.asm=.o)
OBJECTS_INT=$(SOURCES_INT:.c=.o)
OBJECTS_ASM_INT=$(SOURCES_ASM_INT:.asm=.o)
OBJECTS_VIDEO=$(SOURCES_VIDEO:.c=.o)
OBJECTS_KEYBOARD=$(SOURCES_KEYBOARD:.c=.o)
OBJECTS_ASM_KEYBOARD=$(SOURCES_ASM_KEYBOARD:.asm=.o)
OBJECTS_EXCEP=$(SOURCES_EXCEP:.c=.o)
OBJECTS_ASM_EXCEP=$(SOURCES_ASM_EXCEP:.asm=.o)
OBJECTS_MM =$(SOURCES_MM:.c=.o)
OBJECTS_scheduler=$(SOURCES_scheduler:.c=.o)
OBJECTS_ARRAYS=$(SOURCES_ARRAYS:.c=.o)
OBJECTS_FILES_DESCRIPTORS=$(SOURCES_FILES_DESCRIPTORS:.c=.o)
OBJECTS_PROCESSES=$(SOURCES_PROCESSES:.c=.o)
OBJECTS_IPC=$(SOURCES_IPC:.c=.o)
OBJECTS_LIBS=$(SOURCES_LIBS:.c=.o)

LOADERSRC=loader.asm

LOADEROBJECT=$(LOADERSRC:.asm=.o)
STATICLIBS=

all: $(KERNEL)
gdb: $(KERNEL_GDB) bin

$(KERNEL): $(LOADEROBJECT) $(OBJECTS) $(OBJECTS_INT) $(STATICLIBS) $(OBJECTS_ASM) $(OBJECTS_ASM_INT) $(OBJECTS_VIDEO) $(OBJECTS_KEYBOARD) $(OBJECTS_ASM_KEYBOARD) $(OBJECTS_EXCEP) $(OBJECTS_ASM_EXCEP) $(OBJECTS_MM) $(OBJECTS_scheduler) $(OBJECTS_ARRAYS) $(OBJECTS_FILES_DESCRIPTORS) $(OBJECTS_IPC) $(OBJECTS_PROCESSES) $(OBJECTS_LIBS)
	$(LD) $(LDFLAGS) -g -T kernel.ld -o $(KERNEL) $(LOADEROBJECT) $(OBJECTS) $(OBJECTS_INT) $(OBJECTS_ASM_INT) $(OBJECTS_ASM) $(STATICLIBS) $(OBJECTS_VIDEO) $(OBJECTS_KEYBOARD) $(OBJECTS_ASM_KEYBOARD) $(OBJECTS_EXCEP) $(OBJECTS_ASM_EXCEP) $(OBJECTS_MM) $(OBJECTS_scheduler) $(OBJECTS_ARRAYS) $(OBJECTS_FILES_DESCRIPTORS) $(OBJECTS_IPC) $(OBJECTS_PROCESSES) $(OBJECTS_LIBS)

$(KERNEL_GDB): $(LOADEROBJECT) $(OBJECTS) $(OBJECTS_INT) $(STATICLIBS) $(OBJECTS_ASM) $(OBJECTS_ASM_INT) $(OBJECTS_VIDEO) $(OBJECTS_KEYBOARD) $(OBJECTS_ASM_KEYBOARD) $(OBJECTS_EXCEP) $(OBJECTS_ASM_EXCEP) $(OBJECTS_MM) $(OBJECTS_scheduler) $(OBJECTS_ARRAYS) $(OBJECTS_FILES_DESCRIPTORS) $(OBJECTS_IPC) $(OBJECTS_PROCESSES) $(OBJECTS_LIBS)
	$(LD) $(LDFLAGS) -g -T kernel_gdb.ld -o $(KERNEL_GDB) $(LOADEROBJECT) $(OBJECTS) $(OBJECTS_INT) $(OBJECTS_ASM_INT) $(OBJECTS_ASM) $(STATICLIBS) $(OBJECTS_VIDEO) $(OBJECTS_KEYBOARD) $(OBJECTS_ASM_KEYBOARD) $(OBJECTS_EXCEP) $(OBJECTS_ASM_EXCEP) $(OBJECTS_MM) $(OBJECTS_scheduler) $(OBJECTS_ARRAYS) $(OBJECTS_FILES_DESCRIPTORS) $(OBJECTS_IPC) $(OBJECTS_PROCESSES) $(OBJECTS_LIBS)

%.o: %.c
	$(GCC) $(GCCFLAGS) -I./include -c $< -DMM_$(MM) -o $@ 

%.o : %.asm
	$(ASM) $(ASMFLAGS) $< -o $@

$(LOADEROBJECT):
	$(ASM) $(ASMFLAGS) $(LOADERSRC) -o $(LOADEROBJECT)

bin:$(KERNEL_GDB)
	objcopy -O binary $(KERNEL_GDB) kernel.bin

clean:
	rm -rf ./*.o *.bin *.elf Interrupciones/*.o Keyboard_Driver/*.o Video_Driver/*.o Scheduler/*.o Memory_Manager/*.o Arrays/*.o Files_Descriptors/*.o IPCs/*.o Processes/*.o Libs/*.o

.PHONY: all gdb clean bin